{
  "name": "morningreport",
  "version": "1.0.0",
  "description": "Morning stock market report desktop application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "webpack serve --mode development --config webpack.renderer.config.js",
    "dev:electron": "webpack --mode development --config webpack.main.config.js && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --mode production --config webpack.main.config.js",
    "build:renderer": "webpack --mode production --config webpack.renderer.config.js",
    "package": "npm run build && electron-builder",
    "start": "electron ."
  },
  "keywords": [
    "electron",
    "stock",
    "market",
    "report"
  ],
  "author": "cpv0310",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/d3": "^7.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0",
    "yahoo-finance2": "^3.11.2"
  },
  "build": {
    "appId": "com.cpv0310.morningreport",
    "productName": "Morning Report",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Finance"
    }
  }
}
